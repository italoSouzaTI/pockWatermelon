{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "emitDeclarationOnly": true,
        "experimentalDecorators": true,
        "paths": {
            "@shared/*": ["./src/shared/*"],
            "@features/*": ["./src/features/*"],
            "@core/*": ["./src/core/*"],
            "@routes": ["./src/routes"]
        },
        "typeRoots": ["./src/types"],
        "types": ["...", "@types/jest"]
    }
}
